{
  "name": "skillscat",
  "version": "0.1.0",
  "private": true,
  "author": "BackRunner",
  "repository": "https://github.com/BackRunner/skillscat",
  "license": "AGPL-3.0",
  "type": "module",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "init:project": "node scripts/init.mjs",
    "init:local": "node scripts/init.mjs --local",
    "init:production": "node scripts/init.mjs --production",
    "dev:web": "pnpm --filter @skillscat/web dev",
    "preview:web": "pnpm --filter @skillscat/web preview",
    "build": "pnpm --filter @skillscat/web build",
    "build:cli": "node scripts/cli-release.mjs build",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:generate": "pnpm --filter @skillscat/web db:generate",
    "db:migrate": "pnpm --filter @skillscat/web db:migrate",
    "db:migrate:prod": "pnpm --filter @skillscat/web db:migrate:prod",
    "deploy": "pnpm --filter @skillscat/web run deploy",
    "deploy:workers": "node scripts/deploy-workers.mjs --all",
    "deploy:workers:list": "node scripts/deploy-workers.mjs --list",
    "deploy:worker:archive": "node scripts/deploy-workers.mjs --worker archive",
    "deploy:worker:classification": "node scripts/deploy-workers.mjs --worker classification",
    "deploy:worker:github-events": "node scripts/deploy-workers.mjs --worker github-events",
    "deploy:worker:indexing": "node scripts/deploy-workers.mjs --worker indexing",
    "deploy:worker:resurrection": "node scripts/deploy-workers.mjs --worker resurrection",
    "deploy:worker:tier-recalc": "node scripts/deploy-workers.mjs --worker tier-recalc",
    "deploy:worker:trending": "node scripts/deploy-workers.mjs --worker trending",
    "publish:cli": "node scripts/cli-release.mjs publish",
    "publish:cli:major": "node scripts/cli-release.mjs publish --bump major",
    "publish:cli:minor": "node scripts/cli-release.mjs publish --bump minor",
    "publish:cli:patch": "node scripts/cli-release.mjs publish --bump patch",
    "test:cli": "pnpm --filter ./apps/cli test"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.15.0",
    "eslint-plugin-unused-imports": "^4.4.1",
    "svelte-eslint-parser": "^1.4.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "pnpm": {
    "overrides": {
      "@esbuild-kit/core-utils>esbuild": "^0.25.12",
      "cookie": "^0.7.2"
    }
  }
}
